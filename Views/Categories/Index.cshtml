@model IEnumerable<JDPesca.Models.Categories>

@{
    ViewData["Title"] = "Index";
}

<h2>Categories</h2>

<p>
    <a class="btn btn-warning" data-toggle="tooltip" title="Crear" asp-action="Create"><span class="glyphicon glyphicon-plus"></span> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoriesID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
	             <th>
                    Editar
                </th>
			     <th>
                    Borrar
                </th>
			    <th>
                   Ver Productos
                </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriesID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>          
            <td>
                <a class="btn btn-success" data-toggle="tooltip" title="Editar" asp-action="Edit" asp-route-id="@item.CategoriesID"><span class="glyphicon glyphicon-edit"></span></a>
          </td>
		  <td>
             <a class="btn btn-danger" data-toggle="tooltip" title="Borrar" asp-action="Delete" asp-route-id="@item.CategoriesID"><span class="glyphicon glyphicon-trash"></span></a>
               
         </td> 
		 <td>
             <a class="btn btn-info" data-toggle="tooltip" title="Ver Productos" asp-action="openProducts" asp-route-id="@item.CategoriesID"><span class="glyphicon glyphicon-eye-open"></span></a>
         </td> 
        </tr>
}
    </tbody>
</table>

